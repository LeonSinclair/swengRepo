{
    "version": "0.1.0",
    
    "tasks": [
        {
            "taskName": "compileTest",
            "command": "./compileTests.sh",
            "isShellCommand": true,
            "args": [
                "${relativeFile}"
            ],
            "showOutput": "always",
            "echoCommand": true,
            "problemMatcher": []
        },
        {
            "taskName": "runTest",
            "command": "./runTests.sh",
