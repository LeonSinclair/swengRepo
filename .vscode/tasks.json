{
    "version": "0.1.0",
    
    "tasks": [
        {
            "taskName": "compileTest",
            "command": "./compileTests.sh",
            "isShellCommand": true,
            "args": ["${relativeFile}"],
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "runTest",
            "command": "./runTests.sh",
            "isShellCommand": true,
            "args": ["${relativeFile}/${fileBasenameNoExtension}"],
            "showOutput": "always",
            "echoCommand": true
        }
    ]
}